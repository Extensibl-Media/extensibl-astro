---
import Layout from "../layouts/Layout.astro"
import TestimonialsSection from "../components/Homepage/TestimonialsSection.astro"
import HeroSection from "../components/LandingPage/HeroSection.astro"
import WhatWeDoSection from "../components/LandingPage/WhatWeDo.astro"
import FeaturesSection from "../components/LandingPage/FeaturesSection.astro"
import PortfolioGridSection from "../components/Homepage/PortfolioGridSection.astro"
import PricingSection from "../components/LandingPage/Pricing.astro"

import {getCollection} from "astro:content"

const allWorks = await getCollection('works')
const recentWorks = allWorks.slice(0, 6)
---

<Layout title="Web Design for Local Business - Extensibl Media" description="Comprehensive website and maintenance for your business for $0 down, $200/month">
  <HeroSection />
  <WhatWeDoSection />
  <FeaturesSection />
  <PortfolioGridSection recentWorks={recentWorks}/>
  <PricingSection />
  <TestimonialsSection />
</Layout>