---
import { getCollection }  from "astro:content"

const allServices = await getCollection('services')
console.log(allServices)
---
<section class="container mx-auto py-24 px-4">
  <h2 class="lg:text-center text-3xl md:text-4xl lg:text-6xl font-semibold">Our Services</h2>
  <div class="mt-12">{allServices.map((service) => (
    <a href={`/${service.slug}`}>
      <div class="grid grid-cols-7 py-8 items-center gap-8 lg:gap-20 border-b border-b-black">
        <p class="col-span-7 lg:col-span-3 text-lg md:text-xl lg:text-2xl font-semibold"><span class="mr-6 text-4xl">{service.data.icon}</span> {service.data.title}</p>
        <p class="col-span-7 lg:col-span-3">{service.data.shortDesc}</p>
        <div class="h-16 w-16 rounded-full bg-brand-primary flex items-center justify-center text-2xl">âž¥</div>
      </div>
    </a>
  ))}</div>
</section>